{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "git": {
    "commitMessage": "Release v${version}"
  },
  "npm": {
    "release": true
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}
